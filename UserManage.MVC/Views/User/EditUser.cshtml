@model EditUserViewModel
@{
    ViewBag.Title = "修改个人信息";
    var iconPath = "~/images/image1.png";
    if (Model.ExiteIconPath!=null)
    {
        iconPath = "~/images/icons/" + Model.ExiteIconPath;
    }

}
<h1>修改个人信息</h1>
<div class=" row">
    <div class="col-md-12">
        <form  method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>
            <div hidden class="form-group">
                <label asp-for="Id"></label>
                <input  asp-for="Id" class="form-control" />
            </div>
            <div hidden class="form-group">
                <label asp-for="ExiteIconPath"></label>
                <input asp-for="ExiteIconPath" class="form-control" />
            </div>
            <div hidden class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ChineseName"></label>
                <input asp-for="ChineseName" class="form-control" />
                <span asp-validation-for="ChineseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender"></label>
                <select  asp-for="Gender" class="custom-select mr-sm-2"
                        asp-items="Html.GetEnumSelectList<GenderEnum>()">
                </select>
            </div>
            <div class="form-group row ">
                <label asp-for="Icon" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Icon" multiple class="form-control custom-file-input" />
                        <span asp-validation-for="Icon" class="text-danger"></span>
                    </div>
                    <label class="custom-file-label">上传图片</label>
                </div>
            </div>
            <br />
            <div>
                <img src="@iconPath" style="width:300px" asp-append-version="true"/>
            </div>
            <button type="submit" class="btn btn-primary">提交</button>
            <a asp-action="index" asp-controller="home">返回</a>
            @section Scripts{
                <script>
                    $(document).ready(function () {
                        $(".custom-file").on("change", function () {
                            $(this)
                                .next(".custom-file-label")
                                .html("已修改");
                        });
                    });
                </script>
            }
        </form>
    </div>
</div>

